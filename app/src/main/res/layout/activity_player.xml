<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayerActivity">

    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/surfaceView"
        android:max="100"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_player"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/seekBar"
        android:gravity="center"
        android:text="@string/play" />

    <Button
        android:id="@+id/btn_start_live"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/btn_player"
        android:gravity="center"
        android:text="@string/start_publish" />

    <Button
        android:id="@+id/btn_stop_live"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/btn_start_live"
        android:gravity="center"
        android:text="@string/stop_publish" />

    <Button
        android:id="@+id/btn_test_rtmp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/btn_stop_live"
        android:gravity="center"
        android:text="@string/go_to_rtmp_page" />

</RelativeLayout>